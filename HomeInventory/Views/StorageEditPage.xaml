<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HomeInventory.Views.StorageEditPage"
             xmlns:model="clr-namespace:HomeInventory.Models"
             xmlns:viewmodel="clr-namespace:HomeInventory.ViewModels"
             x:DataType="viewmodel:StorageEditViewModel"
             Loaded="StorageEditPage_OnLoaded"
             Title="StorageEditPage">
    <VerticalStackLayout>
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Entry Text="{Binding EditStorage.Name}"/>

        <Button Text="Save" Command="{Binding EditCommand}"/>
        <Button Text="Back" Command="{Binding GoBackCommand}"/>
    </VerticalStackLayout>
</ContentPage>