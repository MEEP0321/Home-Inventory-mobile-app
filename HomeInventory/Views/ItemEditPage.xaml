<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HomeInventory.Views.ItemEditPage"
             xmlns:model="clr-namespace:HomeInventory.Models"
             xmlns:viewmodel="clr-namespace:HomeInventory.ViewModels"
             x:DataType="viewmodel:ItemEditViewModel"
             Loaded="ItemEditPage_OnLoaded"
             Title="ItemEditPage">
    <VerticalStackLayout>
        <Entry Text="{Binding EditItem.Name}"/>
        <Entry Text="{Binding EditItem.Notes}"/>
        <Button Text="Save" Command="{Binding EditCommand}"/>
        <Button Text="Back" Command="{Binding GoBackCommand}"/>
    </VerticalStackLayout>
</ContentPage>