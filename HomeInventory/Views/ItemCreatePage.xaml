<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HomeInventory.Views.ItemCreatePage"
             xmlns:model="clr-namespace:HomeInventory.Models"
             xmlns:viewmodel="clr-namespace:HomeInventory.ViewModels"
             x:DataType="viewmodel:ItemCreateViewModel"
             Loaded="ItemCreatePage_OnLoaded"
             Title="Tárgy Hozzáadása">
    <VerticalStackLayout>
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Label Text="Tárgy neve: "></Label>
        <Entry Text="{Binding Item.Name}"></Entry>

        <Label Text="Megjegyzés: "></Label>
        <Entry Text="{Binding Item.Notes}"></Entry>

        <Grid RowDefinitions="Auto,*">
            <Entry Text="{Binding FilterText, Mode=TwoWay}"/>
            <ListView Grid.Row="1"
              ItemsSource="{Binding FilteredStorages}">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="model:Storage">
                        <ViewCell>
                            <Label Text="{Binding Name}"/>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>


        <Button Text="Létrehoz" Command="{Binding CreateItemCommand}"/>
        <Button Text="Back" Command="{Binding GoBackCommand}"/>



    </VerticalStackLayout>
</ContentPage>