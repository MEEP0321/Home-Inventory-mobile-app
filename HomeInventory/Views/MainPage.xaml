<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:HomeInventory.ViewModels"
             x:DataType="viewmodel:MainPageViewModel"
             x:Class="HomeInventory.MainPage">

    <Grid RowDefinitions="85, *, 75" ColumnDefinitions="*, *">
        <Label
            Grid.Row="0"
            Grid.ColumnSpan="2"
            FontSize="Header"
            BackgroundColor="Black"
            TextColor="#EFECE3"
            Text="Home"
            HorizontalTextAlignment="Center"
            VerticalTextAlignment="Center"
            VerticalOptions="Fill"
            HorizontalOptions="Fill"
            />
        <VerticalStackLayout
            Grid.Row="1"
            Grid.ColumnSpan="2"
            Padding="50"
            Spacing="30"
            BackgroundColor= "#EFECE3"
            >

            <Button 
                BackgroundColor="#8FABD4" BorderColor="#4A70A9" BorderWidth="5"
                HeightRequest="250"
                WidthRequest="500"
                FontSize="Large"
                TextColor="Black"
                Text="Tároló hozzáadása" 
                Command="{Binding GoToStorageCreatePageCommand}"/>
            <Button 
                BackgroundColor="#8FABD4" BorderColor="#4A70A9" BorderWidth="5"
                HeightRequest="250"
                WidthRequest="500" 
                FontSize="Large"
                TextColor="Black"
                Text="Tárgy hozzáadása" 
                Command="{Binding GoToItemCreatePageCommand}"/>
        </VerticalStackLayout>
        <Button 
            Grid.Row="2"
            Grid.Column="0"
            BackgroundColor="#4A70A9"
            BorderColor="#8FABD4"
            BorderWidth="1"
            CornerRadius="0"
            HorizontalOptions="Fill"
            FontSize="Medium"
            TextColor="Black"
            Text="Tárolók" 
            Command="{Binding GoToStoragesPageCommand}" />

        <Button 
            Grid.Row="2"
            Grid.Column="1"
            BackgroundColor="#4A70A9"
            BorderColor="#8FABD4"
            BorderWidth="1"
            CornerRadius="0"
            HorizontalOptions="Fill"
            FontSize="Medium"
            TextColor="Black"
            Text="Tárgyak" 
            Command="{Binding GoToItemsPageCommand}" />
    </Grid>
</ContentPage>
