<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:HomeInventory.ViewModels"
             x:DataType="viewmodel:MainPageViewModel"
             x:Class="HomeInventory.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25"
            BackgroundColor="White">
            
            <Label Text="hello" TextColor="Black"/>
            <Button Text="Create Storage" Command="{Binding GoToStorageCreatePageCommand}"/>
            <Button Text="Create Item" Command="{Binding GoToItemCreatePageCommand}"/>
            <Button Text="Items" Command="{Binding GoToItemsPageCommand}"/>
            <Button Text="Storages" Command="{Binding GoToStoragesPageCommand}"/>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
